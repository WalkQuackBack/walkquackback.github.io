---
const { post } = Astro.props;
---

<li class="blog-post">
  <article>
    <h2>
      <a href={post.url}>
        {post.frontmatter.title}
      </a>
    </h2>
    <p><em>{post.frontmatter.description}</em></p>
    <hr />
    <div class="blog-post-footer">
      <p>At {post.frontmatter.pubDate.toString().slice(0, 10)}</p>
      <p>By {post.frontmatter.author}</p>
    </div>
  </article>
</li>
